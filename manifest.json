 {
    "name": "Craveats Test",
    "version": "1.0",
    "description": "Dev for our top secret super sweet Chrome extension",

    "options_page": "options.html",

    "chrome_url_overrides": {
    	"newtab": "fragment.html"
    },

    // "browser_action": {
    // 	"default_icon": "flowers.jpg"
    // },

    // up to extension to tell the browser when user can interact w popup
    // "page_action": {
    // 	"default_popup": "fragment.html",
    // 	"default_icon": "flowers.jpg"
    // },

    "permissions": [
    	"activeTab",
        "geolocation",
    	"tabs",
        "storage",
        "declarativeContent"
    ],

    "background": {
    	"scripts": ["background.js"], 
    	"persistent": false
    }, // extension now aware that includes non persistent background script and 
    	// will scan registered file for important events it needs to listen for
    "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'",
    
    "manifest_version": 2
  }